        {
            "name": "Run in Electron",
            "program": "${env:ProgramFiles}/Foundry Virtual Tabletop/resources/app/main.js",
            "args": [
                "--datapath C:/Code/FoundryLocal",
                "--world=developing-reclaim"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std",
            "preLaunchTask": "${defaultBuildTask}",
            "serverReadyAction": {
                "pattern": "listening on port ([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}