    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Firefox"
        },
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch FoundryVTT localy",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "C:\\Program Files\\Foundry Virtual Tabletop\\resources\\app\\main.js",
            "args": [
                "--datapath C:/Code/FoundryLocal",
                "--debug"
            ],
            "outputCapture": "std"
        }
    ]
}